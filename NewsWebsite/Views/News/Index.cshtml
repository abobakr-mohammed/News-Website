@model IEnumerable<CoreLogic.News>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
<p>
    <a asp-action="Create" class="btn btn-success " style="margin:10px">إضافة خبر</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary">تعديل</a> |
                <a asp-action="Details" asp-route-id="@item.ID"  class="btn btn-dark">تفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.ID"  class="btn btn-danger">مسح</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>