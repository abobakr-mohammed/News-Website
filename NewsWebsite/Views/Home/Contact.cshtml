@{
    ViewData["Title"] = "Contact";
}
@model ContactUs

<!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <h2>Contact</h2>
          <p>يمكنك مراسلتنا عبر احدى الوسائل الاتية وشاركنا ارارك وافكارك </p>
        </div>
      </div>
      <div class="container">

        <div class="row mt-5">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                <div class="info-box">
                  <i class="bx bx-map"></i>
                  <h3>العنوان</h3>
                  <p>Dairout, Assuit, Egypt</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-envelope"></i>
                  <h3>راسلنا</h3>
                  <p>abobakrmohammed95@gmail.com</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-phone-call"></i>
                  <h3>اتصل بنا</h3>
                  <p>+201140035279<br>+201009133638</p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6">
            <form asp-action="SaveContact">
              <div class="row">
                <div class="col form-group">
                  <input type="text" asp-for="Name" class="form-control"  placeholder="الاسم" required>
                </div>
                <div class="col form-group">
                  <input type="email" class="form-control" asp-for="Email" placeholder="الايميل" required>
                </div>
              </div>
              <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="Subject" placeholder="الموضوع" required>
              </div>
              <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="رسالتك" required></textarea>
              </div>
              <div class="text-center"><button type="submit">إرسال</button></div>
            </form>
          </div>

        </div>

      </div>
    </section>